<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Height" Value="35"></Setter>
            <Setter Property="Width" Value="272"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
        </Style>
    </Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200*"/>
			<ColumnDefinition Width="199*"></ColumnDefinition>
			<ColumnDefinition Width="201*"/>
			<ColumnDefinition Width="200*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="72*"></RowDefinition>
			<RowDefinition Height="73*"/>
			<RowDefinition Height="44*"></RowDefinition>
			<RowDefinition Height="32*"/>
			<RowDefinition Height="68*"/>
			<RowDefinition Height="145*"></RowDefinition>
		</Grid.RowDefinitions>

		<HeaderedContentControl FontSize="50" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,19,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2">File Renamer</HeaderedContentControl>

		<TextBox x:Name="directoryText" Grid.Column="1" Height="25" Width="304" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True" Margin="0,48,0,0" Grid.Row="1" Grid.ColumnSpan="2"/>
		<Button Height="25" Width="96" FontSize="11" x:Name="directoryBtn" Click="DirectoryBtn_Click" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,48,0,0" Grid.Row="1">Ordner auswählen</Button>
		<Button Style="{StaticResource BtnStyle}" x:Name="mainBtn" Click="MainBtn_Click" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="83,28,0,0" Height="34" Width="200" Grid.Column="1" Grid.ColumnSpan="2">Dateien umbenennen</Button>

		<Button Style="{StaticResource BtnStyle}" x:Name="undo_btn" Click="UndoBtn_Click" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="84,105,0,0" Content="Rückgängig" Height="30" Width="86" FontSize="15"/>

		<Label Grid.Row="2" Grid.Column="1" Margin="52,5,84,7" Content="Ersetze:" FontSize="13"/>
		<TextBox x:Name="searchVal" Grid.Row="2" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="134,10,0,0" Grid.ColumnSpan="2"></TextBox>

		<Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="76,39,0,0" Content="Mit:" Grid.RowSpan="2"/>
        <TextBox x:Name="replaceVal" Grid.Row="3" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="134,0,0,8" Grid.ColumnSpan="2"></TextBox>

		<Label Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,28,0,0" Content="Suffix:" Grid.RowSpan="2"/>
		<TextBox x:Name="suffixVal" Grid.Row="3" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="134,32,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

		<Label Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,25,0,0" Content="Führende Nullen:"/>
		<TextBox x:Name="leadingZeroes" Grid.Row="4" Grid.Column="1" Width="53" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="134,33,0,0"/>

		<Image Source="https://www.iconpacks.net/icons/2/free-file-icon-1453-thumb.png" Margin="176,10,91,50" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
		<Button Style="{StaticResource BtnStyle}" x:Name="console_btn" Click="ConsoleBtn_Click" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="197,104,0,0" Content="Konsole" Height="30" Width="86" Grid.ColumnSpan="2"/>



        <Button Style="{StaticResource BtnStyle}" x:Name="mainBtn_Copy" Click="datentyp_click" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="84,66,0,0" Height="34" Width="200" Grid.Column="1" Content="Datentyp" Grid.ColumnSpan="2"/>
	</Grid>
</Window>